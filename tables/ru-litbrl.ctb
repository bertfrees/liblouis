# Adjust spacing around signs according to the Russian braille rules.
noback context `["-\s"] @36
noback context [$s]"-"$s ?

# Mark cyrillic letters immediately following digits.
noback context [$d]%uppercyrillic %updigit@45#1=0#3=1
noback context [$d]%lowercyrillic %updigit@5#1=0

# Mark letters immediately following dollar sign.
noback context ["$"]%lowercyrillic @4-145-5#1=0
noback context ["$"]%uppercyrillic @4-145-45#1=0#3=1
noback context ["$"]%lowerlatin @4-145-6#1=1
noback context ["$"]%upperlatin @4-145-46#1=1

# Mark lowercase latin letters where it is required.
noback context #1=1[]%cyrleter #1=0
noback context #1=1[$d]%lowerlatin %updigit@6
noback context #1=0[]%lowerlatin #1=1@6

# Mark uppercase latin letters where it is appropriate.
noback context []#2=0%upperlatin #1=1#2=1@46
noback context #2=1!%upperlatin_[] #2=0

# Mark uppercase cyrillic letters where it is appropriate.
noback context []#3=0%uppercyrillic #3=1@45
noback context #3=1!%uppercyrillic_[] #3=0

# Mark cyrillic letters immediately following latins.
noback context %latin[]%uppercyrillic @45#1=0
noback context %latin[]%lowercyrillic @5#1=0

